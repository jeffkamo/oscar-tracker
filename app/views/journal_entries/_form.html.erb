<%= form_with model: @entry do |form| %>
  <div>
    <%= form.label :product %>
    <% @entry.errors.full_messages_for(:food_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= form.select :food_id, @food %>
  </div>

  <div>
    <%= form.label :amount %>
    <% @entry.errors.full_messages_for(:amount).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= form.number_field :amount, step: 0.5 %>
  </div>

  <div>
    <%= form.label :date %>
    <% @entry.errors.full_messages_for(:date).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
